  <% layout("/layouts/boilerplate") %>


  <!------------show section----------->
  <div class="row mt-3" id="coordi" cord-data="<%= listing.geometry.coordinates %>">
    <div class="col-8 offset-3"> 
<h3 id="coords" data-coords='<%- JSON.stringify(listing.geometry.coordinates) %>'></h3>


      <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
      <img src="<%= listing.image.url%>" alt="imaage" class="img-fluid max-width: 100% height:3rem"/>
      <div class=" card-body"> 
        <p class="card-text"><i><b>Owned by <%= listing.owner.username %></b></i></p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">&#8377;<%=listing.price.toLocaleString("en-IN") %>/ Night</p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p> 
      </div>
    </div>
      <br>
      <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="btns offset-3">
         <form action="/Listing/<%=listing._id%>/edit"><button class="btn btn-success">Edit</button></form>
        <br>
        <form action="/Listing/<%=listing._id %>/delete"><button class="btn btn-danger">Delete</button></form>
      </div>
      <% } %>
</div>

<hr class="offset-3"> 

<!----------Leave reviews--------->

<% if(currUser){ %>
  <div class="col-8 offset-3 mb-3">
    <h4>Leave a Review</h4>
    <form action="/Listing/<%=listing.id %>/reviews?method=post" method="post" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
       <fieldset class="starability-slot">  
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
    </div>


      <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Commnets</label>
      <textarea name="review[Comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>        
      <div class="invalid-feedback">Please add some commenst for review</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
     </form>
  </div>
  <% } %>   
<!----------Show all reviews--------->
 
<% if(listing.reviews.length > 0) { %>
   <hr  class="offset-3">
<div class="row offset-3">
  <p><b> All Reviews</b></p>
  <% for(let rv of listing.reviews){ %>
      <div class="card col-5 ms-3 mb-3 " >
        <div class="card-body">
          <h5 class="card-title"><i><b>@<%= rv.author.username %></b></i></h5>
          <p class="starability-result card-text" data-rating="<%= rv.rating %>"></p>
          <p class="card-text"><%= rv.Comment %></p>
          <% if(currUser && currUser._id.equals(rv.author._id)){ %>
          <form action="/Listing/<%= listing._id %>/reviews/<%= rv._id %>?_method=DELETE" class="mb-3" method="POST">
            <button class="btn btn-sm  btn-dark">Delete</button>
          </form>
          <% } %>
       </div>
      </div>
  <% } %>
</div>
 <% } %>
