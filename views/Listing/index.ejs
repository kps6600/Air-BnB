 <% layout("/layouts/boilerplate") %>
 <%- include("../includes/categories.ejs") %>
<div class="row row-cols-lg-3">
    <% for(let list of allListings){ %>
     <a href="/Listing/<%=list._id %>" class="index-description">
        <div class="card col listing-card" style="width: 20rem;">
            <img src="<%=list.image.url %>" class="card-img-top" alt="Listing_image" style="height: 20rem;">
                <div class="card-body ">
                    <p class="card-text"><b><%= list.title %></b><br>
                        &#8377; <%=list.price%> / Night
                        <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                    </p>
                </div>
            </div>
        </a> 
    <% } %>
</div> 
  